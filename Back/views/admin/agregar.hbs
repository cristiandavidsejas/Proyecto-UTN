<div class="container-novedad" style="margin: 100px; auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h2 align="center">Agregar una nueva novedad</h2>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control" name="titulo" placeholder="titulo">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" name="subtitulo" placeholder="subtitulo">
                </div>
                <div class="mb-3 row">
                  <textarea name="cuerpo" class="form-control" placeholder="Cuerpo"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen: <input class="form-control " type="file" name="imagen" id="imagen"/></label>
                </div><br>
                <button type="submit" class="btn btn-primary">Guardar</button>
            
            
            
            </form>
            {{#if error}}
                <p>{{message}}</p>
             {{/if}}
        </div>
    </div>














</div>